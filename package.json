{
  "name": "sistema-elyse",
  "productName": "Sistema Elyse",
  "version": "1.0.6",
  "description": "Sistema de fila para farmácia Maxi Popular",
  "main": "main.js",
  "author": "Silvio",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.farmacia.sistemaelyse",
    "productName": "Sistema Elyse",
    "copyright": "© 2025 Silvio",
    "files": [
      "**/*",
      "assets/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "silviotecmarques",
        "repo": "fila-farmacia-app",
        "vPrefixedTagName": true
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Sistema Elyse"
    }
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "electron-log": "^5.1.4",
    "electron-updater": "^6.6.2",
    "rss-parser": "^3.13.0"
  }
}