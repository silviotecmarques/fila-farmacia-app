{
  "name": "sistema-de-fila",
  "version": "1.0.7",
  "private": true,
  "main": "main.js",
  "author": {
    "name": "Silvio Marques",
    "email": "silviotec.marques@gmail.com"
  },
  "license": "Apache-2.0",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.silvio.fila",
    "productName": "Sistema de Fila",
    "files": [
      "index.html",
      "main.js",
      "preload.js",
      "renderer/**/*",
      "style/**/*",
      "assets/**/*",
      "package.json",
      "LICENSE",
      "NOTICE",
      "LICENSE.txt"
    ],
    "win": {
      "target": "nsis",
      "artifactName": "${productName} Setup ${version}.exe"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "license": "LICENSE.txt"
    }
  }
}
